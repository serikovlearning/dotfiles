// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
    {
        "context": "Editor",
        "bindings": {
            "ctrl-\\": "terminal_panel::Toggle"
        }
    },
    {
        "context": "Terminal",
        "bindings": {
            "ctrl-\\": "terminal_panel::Toggle"
        }
    },
    {
        "context": "ProjectPanel && not_editing",
        "bindings": {
            "h": "project_panel::CollapseSelectedEntry",
            "l": "project_panel::ExpandSelectedEntry",
            "o": "project_panel::Open",
            "v": "project_panel::OpenSplitVertical",
            "r": "project_panel::Rename",
            "d": "project_panel::Delete",
            "a": "project_panel::NewFile",
            "A": "project_panel::NewDirectory",
            "esc": "editor::ToggleFocus"
        }
    },
    {
        "context": "VimControl && !menu && (vim_mode == normal || vim_mode == visual) || !Editor && !Terminal",
        "bindings": {
            "space e": "vim::ToggleProjectPanelFocus",
            "space g s": "git_panel::ToggleFocus",
            "space b": "tab_switcher::ToggleAll",
            "space space": "file_finder::Toggle",
            "g f": "editor::Format",
            // window related commands (space w X)
            "space w": null,
            "space w left": "workspace::ActivatePaneLeft",
            "space w right": "workspace::ActivatePaneRight",
            "space w up": "workspace::ActivatePaneUp",
            "space w down": "workspace::ActivatePaneDown",
            "space w ctrl-h": "workspace::ActivatePaneLeft",
            "space w ctrl-l": "workspace::ActivatePaneRight",
            "space w ctrl-k": "workspace::ActivatePaneUp",
            "space w ctrl-j": "workspace::ActivatePaneDown",
            "space w h": "workspace::ActivatePaneLeft",
            "space w l": "workspace::ActivatePaneRight",
            "space w k": "workspace::ActivatePaneUp",
            "space w j": "workspace::ActivatePaneDown",
            "space w shift-left": "workspace::SwapPaneLeft",
            "space w shift-right": "workspace::SwapPaneRight",
            "space w shift-up": "workspace::SwapPaneUp",
            "space w shift-down": "workspace::SwapPaneDown",
            "space w x": "workspace::SwapPaneAdjacent",
            "space w ctrl-x": "workspace::SwapPaneAdjacent",
            "space w shift-h": "workspace::MovePaneLeft",
            "space w shift-l": "workspace::MovePaneRight",
            "space w shift-k": "workspace::MovePaneUp",
            "space w shift-j": "workspace::MovePaneDown",
            "space w >": "vim::ResizePaneRight",
            "space w <": "vim::ResizePaneLeft",
            "space w -": "vim::ResizePaneDown",
            "space w +": "vim::ResizePaneUp",
            "space w _": "vim::MaximizePane",
            "space w =": "vim::ResetPaneSizes",
            "space w g t": "pane::ActivateNextItem",
            "space w ctrl-g t": "pane::ActivateNextItem",
            "space w g shift-t": "pane::ActivatePreviousItem",
            "space w ctrl-g shift-t": "pane::ActivatePreviousItem",
            "space w w": "workspace::ActivateNextPane",
            "space w space w": "workspace::ActivateNextPane",
            "space w p": "workspace::ActivatePreviousPane",
            "space w ctrl-p": "workspace::ActivatePreviousPane",
            "space w shift-w": "workspace::ActivatePreviousPane",
            "space w ctrl-shift-w": "workspace::ActivatePreviousPane",
            "space w ctrl-v": "pane::SplitVertical",
            "space w v": "pane::SplitVertical",
            "space w shift-s": "pane::SplitHorizontal",
            "space w ctrl-s": "pane::SplitHorizontal",
            "space w s": "pane::SplitHorizontal",
            "space w ctrl-c": "pane::CloseActiveItem",
            "space w c": "pane::CloseActiveItem",
            "space w ctrl-q": "pane::CloseActiveItem",
            "space w q": "pane::CloseActiveItem",
            "space w ctrl-a": "pane::CloseAllItems",
            "space w a": "pane::CloseAllItems",
            "space w ctrl-o": "workspace::CloseInactiveTabsAndPanes",
            "space w o": "workspace::CloseInactiveTabsAndPanes",
            "space w Q": "workspace::CloseInactiveTabsAndPanes",
            "space w ctrl-n": "workspace::NewFileSplitHorizontal",
            "space w n": "workspace::NewFileSplitHorizontal",
            "g t": "vim::GoToTab",
            "g shift-t": "vim::GoToPreviousTab"
        }
    }
]
